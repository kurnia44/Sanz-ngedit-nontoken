<!DOCTYPE html>
<html lang="id">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Hacker Matrix Effect</title>
    <style>
        /* Mengatur halaman agar full screen dan hitam */
        body {
            margin: 0;
            padding: 0;
            background-color: black;
            overflow: hidden; /* Mencegah scrollbar muncul */
            font-family: monospace;
        }
        
        canvas {
            display: block;
        }
    </style>
</head>
<body>

    <canvas id="matrix"></canvas>

    <script>
        // Mendapatkan elemen canvas
        const canvas = document.getElementById('matrix');
        const ctx = canvas.getContext('2d');

        // Mengatur ukuran canvas agar memenuhi layar
        canvas.width = window.innerWidth;
        canvas.height = window.innerHeight;

        // Karakter yang akan jatuh (Katakana + Angka + Huruf Besar)
        const katakana = 'アァカサタナハマヤャラワガザダバパイィキシチニヒミリヰギジヂビピウゥクスツヌフムユュルグズブヅプエェケセテネヘメレヱゲゼデベペオォコソトノホモヨョロヲゴゾドボポヴッン';
        const latin = 'ABCDEFGHIJKLMNOPQRSTUVWXYZ';
        const nums = '0123456789';
        
        const alphabet = katakana + latin + nums;

        // Mengatur ukuran font dan jumlah kolom
        const fontSize = 16;
        const columns = canvas.width / fontSize; // Jumlah kolom berdasarkan lebar layar

        // Array untuk menyimpan posisi Y dari setiap tetesan (drops)
        const drops = [];
        // Mengisi array drops dengan nilai awal 1 untuk setiap kolom
        for( let x = 0; x < columns; x++ ) {
            drops[x] = 1;
        }

        // Fungsi untuk menggambar efek
        const draw = () => {
            // Membuat efek jejak (trail) dengan menimpa background hitam semi-transparan
            // Opacity 0.05 membuat teks lama perlahan memudar
            ctx.fillStyle = 'rgba(0, 0, 0, 0.05)';
            ctx.fillRect(0, 0, canvas.width, canvas.height);

            // Mengatur warna teks (Hijau Hacker) dan font
            ctx.fillStyle = '#0F0'; 
            ctx.font = fontSize + 'px monospace';

            // Loop untuk setiap tetesan
            for(let i = 0; i < drops.length; i++) {
                // Memilih karakter acak
                const text = alphabet.charAt(Math.floor(Math.random() * alphabet.length));
                
                // Menggambar karakter pada posisi x (kolom) dan y (drops[i])
                ctx.fillText(text, i * fontSize, drops[i] * fontSize);

                // Mengirim tetesan kembali ke atas secara acak setelah melewati batas layar
                if(drops[i] * fontSize > canvas.height && Math.random() > 0.975){
                    drops[i] = 0;
                }

                // Menambah posisi Y untuk frame berikutnya
                drops[i]++;
            }
        };

        // Menjalankan animasi setiap 30 milidetik
        setInterval(draw, 30);

        // Menyesuaikan ukuran jika layar di-resize
        window.addEventListener('resize', () => {
            canvas.width = window.innerWidth;
            canvas.height = window.innerHeight;
        });

    </script>
</body>
</html>
